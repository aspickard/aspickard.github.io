{
  "title": "Capslock + return = backspace",
  "rules": [
    {
      "description": "Capslock + return = backspace.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "backspace"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    }
  ]
}
