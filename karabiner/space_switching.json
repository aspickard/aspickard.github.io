{
    "title": "Tap CMD for OS X space switching",
    "rules": [
        {
            "description": "Right command is control when held, space right when tapped.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_control", "repeat": false}],
                    "to_if_alone": [
                            {
                                    "key_code": "right_arrow",
                                    "modifiers": ["left_control"]
                            }
                    ]
                }
            ]
        },
        {
            "description": "Left CMD is space left when tapped.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_command", "repeat": false}],
                    "to_if_alone": [
                            {
                                    "key_code": "left_arrow",
                                    "modifiers": ["left_control"]
                            }
                    ]
                }
            ]
        }
    ]
}
