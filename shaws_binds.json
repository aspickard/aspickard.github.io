{
    "title": "Easy space switching.",
    "rules": [
        {
            "description": "Right command to control when held, spaces right when tapped.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_control"}],
                    "to_if_alone": [
                            {
                                    "key_code": "right_arrow",
                                    "modifiers": ["left_control"]
                            }
                    ]
                }
            ]
        },
        {
            "description": "Left command to spaces left when tapped.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_command"}],
                    "to_if_alone": [
                            {
                                    "key_code": "left_arrow",
                                    "modifiers": ["left_control"]
                            }
                    ]
                }
            ]
        }
    ]
}
