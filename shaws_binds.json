{
    "title": "CAPS + jkli = arrow keys",
    "rules": [
        {
            "description": "Change caps_lock to right_command when pressed with other keys (post tab when pressed alone).",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "right_command"}],
                    "to_if_alone": [{"key_code": "tab"}]
                }
            ]
        },
        {
            "description": "Change right_command + jkli to arrow keys.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["right_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["right_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "down_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": ["right_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "up_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["right_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "right_arrow"}]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "mandatory": ["right_command"],
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_arrow"}]
                }
            ]
        },
        {
            "description": "Quote when tapped, control when held.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_control"}],
                    "to_if_alone": [{"key_code": "quote"}]
                }
            ]
        },
        {
            "description": "Right command to control when held, spaces right when tapped.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_control"}],
                    "to_if_alone": [
                            {
                                    "key_code": "right_arrow",
                                    "modifiers": ["left_control"]
                            }
                    ]
                }
            ]
        },
        {
            "description": "Left command to spaces left when tapped.",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [{"key_code": "left_command"}],
                    "to_if_alone": [
                            {
                                    "key_code": "left_arrow",
                                    "modifiers": ["left_control"]
                            }
                    ]
                }
            ]
        }
    ]
}
